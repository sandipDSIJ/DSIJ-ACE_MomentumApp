<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/active_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/ic_file_download_black_48dp" />

        <in.dsij.acemomentum.view.MyTextView
            android:id="@+id/tvDownloadableName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/font_primary"
            android:textSize="@dimen/font_dialog"
            app:fontName="@string/font_edit_text"
            tools:text="About Us" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tables_lines"
        android:layout_marginLeft="62dp"
        android:background="@color/font_ternary" />

</LinearLayout>