<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/active_background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tables_lines"
        android:background="@color/font_ternary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <in.dsij.acemomentum.view.MyTextView
        android:id="@+id/tvCompany"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:maxLines="3"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="3dp"
        android:paddingTop="7dp"
        android:textColor="@color/font_primary"
        android:textSize="@dimen/font_table"
        app:fontName="@string/font_main"
        tools:text="Shakti Pumps (India) Ltd" />

    <View
        android:layout_width="@dimen/tables_lines"
        android:layout_height="match_parent"
        android:background="@color/font_ternary" />

    <in.dsij.acemomentum.view.MyTextView
        android:id="@+id/tvDate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="7dp"
        tools:text="15 Nov\n2017"
        android:textColor="@color/font_primary"
        android:textSize="@dimen/font_table"
        app:fontName="@string/font_main" />

    <View
        android:layout_width="@dimen/tables_lines"
        android:layout_height="match_parent"
        android:background="@color/font_ternary" />

    <in.dsij.acemomentum.view.MyTextView
        android:id="@+id/tvRecoPrice"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingBottom="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="7dp"
        tools:text="425.10"
        android:textColor="@color/font_primary"
        android:textSize="@dimen/font_table"
        app:fontName="@string/font_main" />

    <View
        android:layout_width="@dimen/tables_lines"
        android:layout_height="match_parent"
        android:background="@color/font_ternary" />

    <in.dsij.acemomentum.view.MyTextView
        android:id="@+id/tvTargetPrice"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingBottom="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="7dp"
        tools:text="690.00"
        android:textColor="@color/font_primary"
        android:textSize="@dimen/font_table"
        app:fontName="@string/font_main" />


    <View
        android:layout_width="@dimen/tables_lines"
        android:layout_height="match_parent"
        android:background="@color/font_ternary" />

    <in.dsij.acemomentum.view.MyTextView
        android:id="@+id/tvCmp"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingBottom="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="7dp"
        tools:text="428.10"
        android:textColor="@color/font_primary"
        android:textSize="@dimen/font_table"
        app:fontName="@string/font_main" />
    </LinearLayout>



</LinearLayout>

